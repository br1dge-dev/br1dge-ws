<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>br1dge.xyz</title>
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { 
        background: #000; 
        overflow: hidden; 
      }
      canvas { 
        display: block; 
      }
    </style>
  </head>
  <body>
    <canvas id="c"></canvas>

    <script>
      const c = document.getElementById('c');
      const ctx = c.getContext('2d');

      const size = 60; // Grid size
      let width, height;

      function resize() {
        width = c.width = window.innerWidth;
        height = c.height = window.innerHeight;
        draw();
      }

      function draw() {
        ctx.fillStyle = '#000';
        ctx.fillRect(0, 0, width, height);

        // Grid - clearly visible
        ctx.strokeStyle = '#333';
        ctx.lineWidth = 2;

        for (let x = 0; x <= width; x += size) {
          ctx.beginPath();
          ctx.moveTo(x, 0);
          ctx.lineTo(x, height);
          ctx.stroke();
        }
        for (let y = 0; y <= height; y += size) {
          ctx.beginPath();
          ctx.moveTo(0, y);
          ctx.lineTo(width, y);
          ctx.stroke();
        }

        // Center of a grid cell
        const gridX = Math.floor(width / size / 2) * size + size / 2;
        const gridY = Math.floor(height / size / 2) * size + size / 2;

        // Bridge - 200px, aligned to grid
        ctx.fillStyle = '#E5E5E5';
        ctx.font = 'bold 200px sans-serif';
        ctx.textAlign = 'center';
        ctx.textBaseline = 'middle';
        ctx.fillText('Í†', gridX, gridY);
      }

      window.addEventListener('resize', resize);
      resize();
    </script>
  </body>
