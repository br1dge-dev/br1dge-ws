          }
          
          // Ein Layer - cleaner Look
          ctx.globalAlpha = alphaBase;
          ctx.fillStyle = '#ff0066';
          ctx.fillText('‚à©', -effectiveOffset, 0);
          ctx.fillStyle = '#00ffff';
          ctx.fillText('‚à©', effectiveOffset, 0);
          
          ctx.globalAlpha = 1;
        }
        
        // Haupt-Symbol - wei√ü
        ctx.fillStyle = '#ffffff';
        ctx.fillText('‚à©', 0, 0);
        
