<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>br1dge.xyz</title>
    <style>
      * { 
        margin: 0; 
        padding: 0; 
        box-sizing: border-box; 
        cursor: none !important;
      }
      
      @media (max-width: 768px) {
        * { cursor: auto !important; }
      }
      
      body {
        background: #0a0a0a;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
      }

      .grid {
        position: fixed;
        inset: 0;
        background-image: 
          linear-gradient(to right, #1a1a1a 1px, transparent 1px),
          linear-gradient(to bottom, #1a1a1a 1px, transparent 1px);
        background-size: 100px 100px;
      }

      .container {
        position: relative;
        z-index: 10;
      }

      .logo-svg {
        width: 400px;
        cursor: none;
        transition: transform 0.15s ease-out;
      }

      .logo-svg:hover {
        transform: scale(1.05);
      }

      /* Smooth animated fill color */
      .bridge-text {
        animation: colorCycle 4s ease-in-out infinite;
      }

      @keyframes colorCycle {
        0% { fill: #00FFFF; filter: drop-shadow(0 0 20px #00FFFF); }
        33% { fill: #FF00FF; filter: drop-shadow(0 0 20px #FF00FF); }
        66% { fill: #7C3AED; filter: drop-shadow(0 0 20px #7C3AED); }
        100% { fill: #00FFFF; filter: drop-shadow(0 0 20px #00FFFF); }
      }

      /* Custom cursor - small and snappy */
      .cursor {
        position: fixed;
        width: 8px;
        height: 8px;
        background: white;
        border-radius: 50%;
        pointer-events: none;
        z-index: 1000;
        mix-blend-mode: difference;
        transform: translate(-50%, -50%);
        transition: transform 0.05s ease-out, width 0.1s, height 0.1s;
      }

      .cursor.active {
        width: 20px;
        height: 20px;
        background: rgba(0, 255, 255, 0.5);
      }

      .cursor-trail {
        position: fixed;
        width: 4px;
        height: 4px;
        background: rgba(0, 255, 255, 0.6);
        border-radius: 50%;
        pointer-events: none;
        z: 999;
      }

      .corner {
        position: fixed;
        width: 30px;
        height: 30px;
        border: 2px solid #333;
        z-index: 20;
        transition: border-color 0.2s ease;
      }

      .corner-tl { top: 20px; left: 20px; border-right: none; border-bottom: none; }
      .corner-tr { top: 20px; right: 20px; border-left: none; border-bottom: none; }
      .corner-bl { bottom: 20px; left: 20px; border-right: none; border-top: none; }
      .corner-br { bottom: 20px; right: 20px; border-left: none; border-top: none; }

      .logo-svg:hover ~ .corner {
        border-color: #00FFFF;
      }
    </style>
  </head>
  <body>
    <div class="grid"></div>
    
    <div class="cursor" id="cursor"></div>
    
    <div class="corner corner-tl"></div>
    <div class="corner corner-tr"></div>
    <div class="corner corner-bl"></div>
    <div class="corner corner-br"></div>

    <div class="container">
      <svg class="logo-svg" id="logo" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
        <text 
          class="bridge-text"
          x="100" 
          y="100" 
          font-size="140" 
          font-weight="bold" 
          text-anchor="middle" 
          dominant-baseline="central"
        >Í†</text>
      </svg>
    </div>

    <script>
      const cursor = document.getElementById('cursor');
      const logo = document.getElementById('logo');
      const trails: HTMLElement[] = [];
      
      let mouseX = 0;
      let mouseY = 0;
      let cursorX = 0;
      let cursorY = 0;

      document.addEventListener('mousemove', (e) => {
        mouseX = e.clientX;
        mouseY = e.clientY;
        
        // Add trail
        const trail = document.createElement('div');
        trail.className = 'cursor-trail';
        trail.style.left = e.clientX + 'px';
        trail.style.top = e.clientY + 'px';
        document.body.appendChild(trail);
        trails.push(trail);
        
        if (trails.length > 8) {
          const old = trails.shift();
          if (old) old.remove();
        }
        
        // Update trail positions
        trails.forEach((t, i) => {
          t.style.opacity = String((8 - i) / 8);
          t.style.transform = `translate(${(i + 1) * -2}px, ${(i + 1) * -2}px)`;
        });
      });

      // Smooth cursor follow
      function animateCursor() {
        cursorX += (mouseX - cursorX) * 0.3;
        cursorY += (mouseY - cursorY) * 0.3;
        cursor!.style.left = cursorX + 'px';
        cursor!.style.top = cursorY + 'px';
        requestAnimationFrame(animateCursor);
      }
      animateCursor();

      // Cursor on logo
      logo?.addEventListener('mouseenter', () => cursor?.classList.add('active'));
      logo?.addEventListener('mouseleave', () => cursor?.classList.remove('active'));
      
      // Click ripple
      logo?.addEventListener('click', (e) => {
        const ripple = document.createElement('div');
        ripple.style.cssText = `
          position: fixed;
          width: 60px;
          height: 60px;
          border: 2px solid #00FFFF;
          border-radius: 50%;
          pointer-events: none;
          z-index: 50;
          left: ${e.clientX - 30}px;
          top: ${e.clientY - 30}px;
          animation: ripple 0.4s ease-out forwards;
        `;
        document.body.appendChild(ripple);
        setTimeout(() => ripple.remove(), 400);
      });

      const style = document.createElement('style');
      style.textContent = `
        @keyframes ripple {
          0% { transform: scale(0.5); opacity: 1; }
          100% { transform: scale(4); opacity: 0; }
        }
      `;
      document.head.appendChild(style);
    </script>
  </body>
</html>