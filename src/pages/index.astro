<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>br1dge.xyz</title>
    <style>
      * { 
        margin: 0; 
        padding: 0; 
        box-sizing: border-box; 
        cursor: none !important;
      }
      
      @media (max-width: 768px) {
        * { cursor: auto !important; }
      }
      
      body {
        background: #0a0a0a;
        height: 100vh;
        width: 100vw;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
      }

      .grid {
        position: fixed;
        inset: 0;
        background-image: 
          linear-gradient(to right, #1a1a1a 1px, transparent 1px),
          linear-gradient(to bottom, #1a1a1a 1px, transparent 1px);
        background-size: 100px 100px;
        animation: gridPulse 4s ease-in-out infinite;
      }

      @keyframes gridPulse {
        0%, 100% { opacity: 0.5; }
        50% { opacity: 0.8; }
      }

      .grid::after {
        content: '';
        position: absolute;
        left: 0;
        right: 0;
        top: 50%;
        height: 1px;
        background: linear-gradient(90deg, transparent, #00FFFF, transparent);
        animation: lineGlow 3s ease-in-out infinite;
      }

      .grid::before {
        content: '';
        position: absolute;
        top: 0;
        bottom: 0;
        left: 50%;
        width: 1px;
        background: linear-gradient(180deg, transparent, #FF00FF, transparent);
        animation: lineGlow 3s ease-in-out infinite 0.5s;
      }

      @keyframes lineGlow {
        0%, 100% { opacity: 0.2; }
        50% { opacity: 0.6; }
      }

      .container {
        position: relative;
        z-index: 10;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .logo-svg {
        width: 600px;
        cursor: none;
        transition: transform 0.2s ease-out;
      }

      .logo-svg:hover {
        transform: scale(1.03);
      }

      .bridge-text {
        animation: colorCycle 6s ease-in-out infinite;
      }

      @keyframes colorCycle {
        0% { fill: #00FFFF; filter: drop-shadow(0 0 8px #00FFFF); }
        33% { fill: #FF00FF; filter: drop-shadow(0 0 8px #FF00FF); }
        66% { fill: #7C3AED; filter: drop-shadow(0 0 8px #7C3AED); }
        100% { fill: #00FFFF; filter: drop-shadow(0 0 8px #00FFFF); }
      }

      .cursor {
        position: fixed;
        width: 6px;
        height: 6px;
        background: white;
        border-radius: 50%;
        pointer-events: none;
        z-index: 1000;
        mix-blend-mode: difference;
        transform: translate(-50%, -50%);
        transition: width 0.15s, height 0.15s, background 0.15s;
      }

      .cursor.active {
        width: 24px;
        height: 24px;
        background: rgba(0, 255, 255, 0.4);
      }

      .cursor-trail {
        position: fixed;
        width: 3px;
        height: 3px;
        background: rgba(0, 255, 255, 0.5);
        border-radius: 50%;
        pointer-events: none;
        z: 999;
        transform: translate(-50%, -50%);
      }

      .corner {
        position: fixed;
        width: 40px;
        height: 40px;
        border: 2px solid #333;
        z-index: 20;
        transition: border-color 0.3s ease;
      }

      .corner-tl { top: 30px; left: 30px; border-right: none; border-bottom: none; }
      .corner-tr { top: 30px; right: 30px; border-left: none; border-bottom: none; }
      .corner-bl { bottom: 30px; left: 30px; border-right: none; border-top: none; }
      .corner-br { bottom: 30px; right: 30px; border-left: none; border-top: none; }
    </style>
  </head>
  <body>
    <div class="grid"></div>
    
    <div class="cursor" id="cursor"></div>
    
    <div class="corner corner-tl"></div>
    <div class="corner corner-tr"></div>
    <div class="corner corner-bl"></div>
    <div class="corner corner-br"></div>

    <div class="container">
      <svg class="logo-svg" id="logo" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
        <text 
          class="bridge-text"
          x="100" 
          y="110" 
          font-size="160" 
          font-weight="bold" 
          text-anchor="middle" 
          dominant-baseline="central"
        >Í†</text>
      </svg>
    </div>

    <script>
      const cursor = document.getElementById('cursor');
      const logo = document.getElementById('logo');
      
      const trails = [];
      
      let mouseX = 0;
      let mouseY = 0;
      let cursorX = 0;
      let cursorY = 0;
      let isOverLogo = false;

      function isOverLogoArea(x, y) {
        const logoEl = document.getElementById('logo');
        if (!logoEl) return false;
        const rect = logoEl.getBoundingClientRect();
        return x >= rect.left && x <= rect.right && y >= rect.top && y <= rect.bottom;
      }

      document.addEventListener('mousemove', (e) => {
        mouseX = e.clientX;
        mouseY = e.clientY;
        
        isOverLogo = isOverLogoArea(mouseX, mouseY);
        
        if (!isOverLogo) {
          const trail = document.createElement('div');
          trail.className = 'cursor-trail';
          document.body.appendChild(trail);
          trails.push({ el: trail, x: e.clientX, y: e.clientY, age: 0 });
          
          if (trails.length > 10) {
            const old = trails.shift();
            if (old) old.el.remove();
          }
        }
        
        trails.forEach((t) => {
          t.age++;
          const opacity = Math.max(0, 1 - t.age / 30);
          t.el.style.opacity = opacity.toString();
          t.el.style.left = t.x + 'px';
          t.el.style.top = t.y + 'px';
        });
      });

      function animateCursor() {
        cursorX += (mouseX - cursorX) * 0.25;
        cursorY += (mouseY - cursorY) * 0.25;
        cursor.style.left = cursorX + 'px';
        cursor.style.top = cursorY + 'px';
        
        if (isOverLogo) {
          cursor.classList.add('active');
        } else {
          cursor.classList.remove('active');
        }
        
        requestAnimationFrame(animateCursor);
      }
      animateCursor();

      document.addEventListener('click', (e) => {
        const ripple = document.createElement('div');
        ripple.style.cssText = `
          position: fixed;
          width: 50px;
          height: 50px;
          border: 2px solid #00FFFF;
          border-radius: 50%;
          pointer-events: none;
          z-index: 50;
          left: ${e.clientX - 25}px;
          top: ${e.clientY - 25}px;
          animation: ripple 0.5s ease-out forwards;
        `;
        document.body.appendChild(ripple);
        setTimeout(() => ripple.remove(), 500);
      });

      const style = document.createElement('style');
      style.textContent = `
        @keyframes ripple {
          0% { transform: scale(0.5); opacity: 1; }
          100% { transform: scale(5); opacity: 0; }
        }
      `;
      document.head.appendChild(style);
    </script>
  </body>
</html>
