<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>br1dge.xyz</title>
    <style>
      * { 
        margin: 0; 
        padding: 0; 
        box-sizing: border-box; 
        cursor: none !important;
      }
      
      @media (max-width: 768px) {
        * { cursor: auto !important; }
      }
      
      body {
        background: #0a0a0a;
        height: 100vh;
        width: 100vw;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
      }

      .grid {
        position: fixed;
        inset: 0;
      }

      .grid-line {
        position: absolute;
        background: #1a1a1a;
      }

      .grid-line-v {
        width: 1px;
        top: 0;
        bottom: 0;
      }

      .grid-line-h {
        height: 1px;
        left: 0;
        right: 0;
      }

      .bit {
        position: absolute;
        width: 4px;
        height: 4px;
        background: #333;
        border-radius: 50%;
      }

      .container {
        position: relative;
        z-index: 10;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .logo-svg {
        width: 600px;
        cursor: none;
      }

      .bridge-text {
        fill: #E5E5E5;
      }

      .cursor {
        position: fixed;
        width: 6px;
        height: 6px;
        background: white;
        border-radius: 50%;
        pointer-events: none;
        z-index: 1000;
        mix-blend-mode: difference;
        transform: translate(-50%, -50%);
        transition: width 0.15s, height 0.15s, background 0.15s;
      }

      .cursor.active {
        width: 24px;
        height: 24px;
        background: rgba(0, 255, 255, 0.4);
      }

      .cursor-trail {
        position: fixed;
        width: 3px;
        height: 3px;
        background: rgba(0, 255, 255, 0.3);
        border-radius: 50%;
        pointer-events: none;
        z: 999;
        transform: translate(-50%, -50%);
      }

      .corner {
        position: fixed;
        width: 40px;
        height: 40px;
        border: 2px solid #333;
        z-index: 20;
      }

      .corner-tl { top: 30px; left: 30px; border-right: none; border-bottom: none; }
      .corner-tr { top: 30px; right: 30px; border-left: none; border-bottom: none; }
      .corner-bl { bottom: 30px; left: 30px; border-right: none; border-top: none; }
      .corner-br { bottom: 30px; right: 30px; border-left: none; border-top: none; }
    </style>
  </head>
  <body>
    <div class="grid" id="grid"></div>
    
    <div class="cursor" id="cursor"></div>
    
    <div class="corner corner-tl"></div>
    <div class="corner corner-tr"></div>
    <div class="corner corner-bl"></div>
    <div class="corner corner-br"></div>

    <div class="container">
      <svg class="logo-svg" id="logo" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
        <text 
          class="bridge-text"
          x="100" 
          y="115" 
          font-size="160" 
          font-weight="bold" 
          text-anchor="middle" 
          dominant-baseline="central"
        >Í†</text>
      </svg>
    </div>

    <script>
      const grid = document.getElementById('grid');
      const cursor = document.getElementById('cursor');
      const logo = document.getElementById('logo');
      
      const trails = [];
      const gridSize = 80;
      const bits = [];
      
      let mouseX = 0;
      let mouseY = 0;
      let cursorX = 0;
      let cursorY = 0;
      let isOverLogo = false;

      // Create grid lines
      function createGrid() {
        const w = window.innerWidth;
        const h = window.innerHeight;
        
        // Vertical lines
        for (let x = 0; x <= w; x += gridSize) {
          const line = document.createElement('div');
          line.className = 'grid-line grid-line-v';
          line.style.left = x + 'px';
          grid.appendChild(line);
        }
        
        // Horizontal lines
        for (let y = 0; y <= h; y += gridSize) {
          const line = document.createElement('div');
          line.className = 'grid-line grid-line-h';
          line.style.top = y + 'px';
          grid.appendChild(line);
        }
        
        // Create bits along grid lines
        createBits(w, h);
      }

      function createBits(w, h) {
        // Vertical bits
        for (let x = 10; x <= w; x += gridSize) {
          for (let y = 0; y <= h; y += gridSize) {
            const bit = document.createElement('div');
            bit.className = 'bit';
            bit.style.left = (x + gridSize/2) + 'px';
            bit.style.top = y + 'px';
            bit.dataset.x = x;
            bit.dataset.y = y;
            bit.dataset.offset = Math.random() * 10;
            bit.dataset.axis = 'v';
            grid.appendChild(bit);
            bits.push(bit);
          }
        }
        
        // Horizontal bits
        for (let y = 10; y <= h; y += gridSize) {
          for (let x = 0; x <= w; x += gridSize) {
            const bit = document.createElement('div');
            bit.className = 'bit';
            bit.style.left = x + 'px';
            bit.style.top = (y + gridSize/2) + 'px';
            bit.dataset.x = x;
            bit.dataset.y = y;
            bit.dataset.offset = Math.random() * 10;
            bit.dataset.axis = 'h';
            grid.appendChild(bit);
            bits.push(bit);
          }
        }
      }

      // Animate bits along grid lines
      function animateBits() {
        const time = Date.now() / 1000;
        
        bits.forEach((bit) => {
          const offset = parseFloat(bit.dataset.offset);
          const axis = bit.dataset.axis;
          const baseX = parseFloat(bit.dataset.x);
          const baseY = parseFloat(bit.dataset.y);
          
          let pos = (time * 30 + offset) % gridSize;
          
          if (axis === 'h') {
            bit.style.left = (baseX + pos) + 'px';
            bit.style.opacity = 0.2 + Math.sin(pos * 0.2) * 0.2;
          } else {
            bit.style.top = (baseY + pos) + 'px';
            bit.style.opacity = 0.2 + Math.sin(pos * 0.2) * 0.2;
          }
        });
        
        requestAnimationFrame(animateBits);
      }

      function isOverLogoArea(x, y) {
        const logoEl = document.getElementById('logo');
        if (!logoEl) return false;
        const rect = logoEl.getBoundingClientRect();
        return x >= rect.left && x <= rect.right && y >= rect.top && y <= rect.bottom;
      }

      document.addEventListener('mousemove', (e) => {
        mouseX = e.clientX;
        mouseY = e.clientY;
        
        isOverLogo = isOverLogoArea(mouseX, mouseY);
        
        if (!isOverLogo) {
          const trail = document.createElement('div');
          trail.className = 'cursor-trail';
          document.body.appendChild(trail);
          trails.push({ el: trail, x: e.clientX, y: e.clientY, age: 0 });
          
          if (trails.length > 8) {
            const old = trails.shift();
            if (old) old.el.remove();
          }
        }
        
        trails.forEach((t) => {
          t.age++;
          const opacity = Math.max(0, 1 - t.age / 20);
          t.el.style.opacity = opacity.toString();
          t.el.style.left = t.x + 'px';
          t.el.style.top = t.y + 'px';
        });
      });

      function animateCursor() {
        cursorX += (mouseX - cursorX) * 0.25;
        cursorY += (mouseY - cursorY) * 0.25;
        cursor.style.left = cursorX + 'px';
        cursor.style.top = cursorY + 'px';
        
        if (isOverLogo) {
          cursor.classList.add('active');
        } else {
          cursor.classList.remove('active');
        }
        
        requestAnimationFrame(animateCursor);
      }
      
      // Initialize
      createGrid();
      animateBits();
      animateCursor();

      document.addEventListener('click', (e) => {
        const ripple = document.createElement('div');
        ripple.style.cssText = `
          position: fixed;
          width: 40px;
          height: 40px;
          border: 2px solid #00FFFF;
          border-radius: 50%;
          pointer-events: none;
          z-index: 50;
          left: ${e.clientX - 20}px;
          top: ${e.clientY - 20}px;
          animation: ripple 0.4s ease-out forwards;
        `;
        document.body.appendChild(ripple);
        setTimeout(() => ripple.remove(), 400);
      });

      const style = document.createElement('style');
      style.textContent = `
        @keyframes ripple {
          0% { transform: scale(0.5); opacity: 1; }
          100% { transform: scale(6); opacity: 0; }
        }
      `;
      document.head.appendChild(style);
    </script>
  </body>
</html>
